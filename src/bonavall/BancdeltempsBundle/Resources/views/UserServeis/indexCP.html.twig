<h1>Serveis list</h1>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuari Ofertant</th>
            <th>Punts</th>
            <th>Nomservei</th>
            <th>Descripcioservei</th>
            <th>Poblacio</th>
            <th>Datainici</th>
            <th>Durada</th>
            <th>Datafinal</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        {% for entity in entities %}
            {%if is_granted('IS_AUTHENTICATED_FULLY')%}
                {% if (entity.estatServei.descripcio == "Actiu") and (entity.dataFinal|date('Y-m-d') > 'now'|date('Y-m-d')) and (entity.iddonant.id != app.user.id) %}
        <tr>
            <td><a href="{{ path('user_serveis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.iddonant.nom}}</td>
            <td>{{ entity.punts }}</td>
            <td>{{ entity.nomServei }}</td>
            <td>{{ entity.descripcioServei }}</td>
            <td>{{ entity.poblacio }}</td>
            <td>{% if entity.dataInici %}{{ entity.dataInici|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.durada }}</td>
            <td>{% if entity.dataFinal %}{{ entity.dataFinal|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_serveis_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li> 
                    {% set counter = 0 %}
                    {%for solicitut in solicituts %}
                        {% if (solicitut.solicitant.id == app.user.id) and (entity.id == solicitut.serveiSolicitat.id) %}
                            {% set counter = counter + 1 %}
                        {% endif %}
                    {% endfor %}
                    {%if counter > 0%}
                    <li>Servei ja solÂ·licitat</li>
                    {%else%}
                        <li>
                            <a href="{{ path('user_missatges_solicita', { 'id': entity.id }) }}">Solicitamiss</a>
                        </li>  
                    {%endif%}
                    </ul>
                </td>
            </tr>
            {% endif %}
            {% else %}
                {% if (entity.estatServei.descripcio == "Actiu") and (entity.dataFinal|date('Y-m-d') > 'now'|date('Y-m-d')) %}
            <tr>
                <td><a href="{{ path('user_serveis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.iddonant.nom}}</td>
                <td>{{ entity.punts }}</td>
                <td>{{ entity.nomServei }}</td>
                <td>{{ entity.descripcioServei }}</td>
                <td>{{ entity.poblacio }}</td>
                <td>{% if entity.dataInici %}{{ entity.dataInici|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.durada }}</td>
                <td>{% if entity.dataFinal %}{{ entity.dataFinal|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_serveis_show', { 'id': entity.id }) }}">Mostrar</a>
                        </li> 

                        <li>
                            <a href="{{ path('user_missatges_solicita', { 'id': entity.id }) }}">Solicitamiss</a>
                        </li>  

                    </ul>
                </td>
            </tr>
            {% endif %}

            {%endif%}

        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_serveis_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>