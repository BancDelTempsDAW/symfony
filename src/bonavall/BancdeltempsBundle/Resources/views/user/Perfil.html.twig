{% extends 'bonavallBancdeltempsBundle:Default:skel.html.twig' %}
{% block body %}

<script src="jquery.validate.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function() {
        $("#ok").hide();
        $('#idMoficarPerfil').click(function(e) { 
            e.preventDefault();
            $("#formid").validate({
                rules: {
                    nom: {required: true},
                    cognom: {required: true},
                    adreca: {required: true},
                    telefon: {required: true},
                    email: {required: true, email: true},
                    presentacio: {required: true}
                },
                messages: {
                    nom: "Falta el nom.",
                    cognom: "Falta el cognom.",
                    adreca: "Debe introducir un email válido.",
                    telefon: "El número de teléfono introducido no es correcto.",
                    email: "Debe introducir solo números.",
                    presentacio: "El campo Mensaje es obligatorio.",
                },
                submitHandler: function(form) {
                    var dataString = 'nom=' + $('#nom').val() + '&cognom=' + $('#cognom').val()
                            + '&adreca=' + $('#adreca').val() + '&telefon=' + $('#telefon').val()
                            + '&email=' + $('#email').val() + '&presentacio=' + $('#presentacio').val();
                    $.ajax({
                        type: "POST",
                        url: "validar.php",
                        data: dataString,
                        success: function(data) {
                            $("#ok").html(data);
                            $("#ok").show();
{#                            $("#formid").hide();#}
                        }
                    });
                    
                }
            });
        });
    });

</script>

<form id="formid" method="post" >

    <div id="ok" class="alert alert-success" ></div>
    <div style="width: 300px" >

        <div class="form-inline" >
            <label for="fotografia">Fotografia:</label><br>
            <input id="user_fotografia" type="text" name="fotografia" value="" placeholder="{{ app.user.fotografia }}" class="form-control" />
            <span class="bg-danger" id="fotografiaMsg"></span>
        </div>

        <div class="form-inline">
            <label for="nom">Nom:</label><br>
            <input id="user_nom" type="text" name="nom" value="" placeholder="{{ app.user.nom }}" class="form-control" />
            <span class="bg-danger" id="nomMsg"></span>
        </div>

        <div class="form-inline">
            <label for="cognom">Cognom:</label><br>
            <input id="user_cognom" type="text" name="cognom" value="" placeholder="{{ app.user.cognom }}" class="form-control" />
            <span class="bg-danger" id="cognomMsg"></span>
        </div>

        <div class="form-inline">
            <label for="adreca">Adreça:</label><br>
            <input id="user_adreca" type="text" name="adreca" value="" placeholder="{{ app.user.adreca }}" class="form-control" />
            <span class="bg-danger" id="adrecaMsg"></span>
        </div>

        <div class="form-inline">
            <label for="telefon">Telefon:</label><br>
            <input id="user_telefon" type="text" name="telefon" value="" placeholder="{{ app.user.telefon }}" class="form-control" />
            <span class="bg-danger" id="telefonMsg"></span>
        </div>

        <div class="form-inline">
            <label for="email">Email:</label><br>
            <input id="user_email" type="text" name="email" value="" placeholder="{{ app.user.email }}" class="form-control" />
            <span class="bg-danger" id="emailMsg"></span>
        </div>

        <div class="form-group">
            <label for="punts">Punts:</label>
            <input id="user_punts" type="text" name="punts" value="" placeholder="{{ app.user.punts }}" readonly="" class="form-control" />
        </div>

        <div class="form-group">
            <label for="presentacio">Presentació:</label>
            <textarea id="user_presentacio" type="text" name="presentacio" value="" placeholder="{{ app.user.presentacio }}" class="form-control" style="width: 400px; height: 100px"></textarea><br>
            <span class="bg-danger" id="presentacioMsg"></span>
        </div>

        <div class="form-inline">
            <input type="submit" id="botoModificarPerfil" name="modificarPerfil" class="btn btn-primary" value="Modificar perfil" style="height: 34px" />
            <a id="botoUserBaixa" name="donarseBaixa" class="btn btn-warning" href="{{ path('baixa_perfil') }}" >Donarse de baixa</a>
        </div>

    </div>

</form>

{% endblock %}