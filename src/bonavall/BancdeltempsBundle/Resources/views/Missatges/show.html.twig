{% extends '::base.html.twig' %}

{% block body -%}
<h1>Missatges</h1>

<div class="table-responsive" >
    <br />
    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Missatge</th>
                <td>{{ entity.missatge }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ entity.data|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_missatges') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_missatges_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>

    </ul>
</div>

{% endblock %}
