{% extends 'bonavallBancdeltempsBundle:Default:skel.html.twig' %}

{% block body -%}
    <h1>Missatges</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Missatge</th>
                <td>{{ entity.missatge }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ entity.data|date('d-m-Y H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user_missatges') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_missatges_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
