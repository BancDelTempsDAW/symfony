{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuaris</h1>

<div class="panel panel-default">
    <div class="container-fluid">
        <div class="table-responsive" >
            <br />
            <table class="table table-condensed">
                <thead>
                <tr class="info">
                <th>Id</th>
                <th>Salt</th>
                <th>Correu Electrònic</th>
                <th>Contrasenya</th>
                <th>Està actiu</th>
                <th>Nom</th>
                <th>Cognom</th>
                <th>Adreça</th>
                <th>Telèfon</th>
                <th>Fotografia</th>
                <th>Presentació</th>
                <th>Punts</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuari_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.salt }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.cognom }}</td>
                <td>{{ entity.adreca }}</td>
                <td>{{ entity.telefon }}</td>
                <td>{{ entity.fotografia }}</td>
                <td>{{ entity.presentacio }}</td>
                <td>{{ entity.punts }}</td>
                <td>
                <ul style="list-style:none;">
                    <li>
                        <a href="{{ path('usuari_show', { 'id': entity.id }) }}">Veure</a>
                    </li>
                    <li>
                        <a href="{{ path('usuari_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul style="list-style:none;">
        <li>
            <a href="{{ path('usuari_new') }}">Crear nova entrada</a>
        </li>
    </ul>
            </div>
        </div>
    </div>
    {% endblock %}
