{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Denuncies list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Motiu</th>
                <th>Resolucio</th>
                <th>Datadenuncia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_denuncies_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.motiu }}</td>
                <td>{{ entity.resolucio }}</td>
                <td>{% if entity.dataDenuncia %}{{ entity.dataDenuncia|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_denuncies_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_denuncies_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_denuncies_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
