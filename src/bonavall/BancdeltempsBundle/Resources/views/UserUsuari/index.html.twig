{% extends '::base.html.twig' %}

{% block body -%}
<div class="table-responsive">
    <h1>Llistat d'usuaris</h1>


    <table class="table table-condensed">
        <thead>
            <tr class="info">
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Cognom</th>
                <th>Adreca</th>
                <th>Telefon</th>
                <th>Fotografia</th>
                <th>Presentacio</th>
                <th>Punts</th>
                <th>Opcions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                {%if entity.isActive %}
            <tr>
                <td><a href="{{ path('user_usuari_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>                
                <td>{{ entity.email }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.cognom }}</td>
                <td>{{ entity.adreca }}</td>
                <td>{{ entity.telefon }}</td>
                <td>{{ entity.fotografia }}</td>
                <td>{{ entity.presentacio }}</td>
                <td>{{ entity.punts }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a class="btn btn-info" href="{{ path('user_usuari_show', { 'id': entity.id }) }}">Mostra</a>
                    </li>
                   
                </ul>
                </td>
            </tr>
            {%endif%}
        {% endfor %}
        </tbody>
    </table>
</div>
  </div>
    {% endblock %}
