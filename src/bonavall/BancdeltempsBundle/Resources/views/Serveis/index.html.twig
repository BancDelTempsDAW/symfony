{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Serveis</h1>

    <div class="table-responsive">
    <table class="table table-condensed">
        <thead>
            <tr class="info">
                <th>Id</th>
                <th>Punts</th>
                <th>Nom del servei</th>
                <th>Descripci√≥ del servei</th>
                <th>Data Inici</th>
                <th>Durada</th>
                <th>Data Final</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_serveis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.punts }}</td>
                <td>{{ entity.nomServei }}</td>
                <td>{{ entity.descripcioServei }}</td>
                <td>{% if entity.dataInici %}{{ entity.dataInici|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.durada }}</td>
                <td>{% if entity.dataFinal %}{{ entity.dataFinal|date('d-m-Y') }}{% endif %}</td>
                <td>
                    <ul style="list-style:none;">
                    <li>
                        <a href="{{ path('admin_serveis_show', { 'id': entity.id }) }}">Veure</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_serveis_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul style="list-style:none;">
        <li>
            <a href="{{ path('admin_serveis_new') }}">Crear nova entrada</a>
        </li>
    </ul>
    {% endblock %}
