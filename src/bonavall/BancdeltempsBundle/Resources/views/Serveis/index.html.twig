{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Serveis list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Punts</th>
                <th>Descripcioservei</th>
                <th>Codipostal</th>
                <th>Datainici</th>
                <th>Durada</th>
                <th>Datafinal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_serveis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.punts }}</td>
                <td>{{ entity.descripcioServei }}</td>
                <td>{{ entity.codiPostal }}</td>
                <td>{% if entity.dataInici %}{{ entity.dataInici|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.durada }}</td>
                <td>{% if entity.dataFinal %}{{ entity.dataFinal|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_serveis_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_serveis_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_serveis_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
